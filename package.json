{
  "name": "matrix-bot-sdk",
  "version": "0.3.8",
  "description": "A lightweight version of the matrix-js-sdk intended for bots",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/turt2live/matrix-js-bot-sdk.git"
  },
  "author": "turt2live",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/turt2live/matrix-js-bot-sdk/issues"
  },
  "homepage": "https://github.com/turt2live/matrix-js-bot-sdk#readme",
  "scripts": {
    "prepare": "node scripts/try_build.js",
    "prepublishOnly": "npm run build",
    "build": "tsc",
    "lint": "tslint --project ./tsconfig.json -t stylish",
    "test": "ts-mocha --project ./tsconfig.json test/**/*.ts",
    "build:examples": "tsc -p tsconfig-examples.json",
    "example:appservice": "npm run build:examples && node lib/examples/appservice.js",
    "example:login_register": "npm run build:examples && node lib/examples/login_register.js"
  },
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0"
  },
  "dependencies": {
    "@types/node": "^10.14.9",
    "bluebird": "^3.5.5",
    "express": "^4.17.1",
    "hash.js": "^1.1.7",
    "htmlencode": "0.0.4",
    "lowdb": "^1.0.0",
    "lru-cache": "^5.1.1",
    "morgan": "^1.9.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "sanitize-html": "^1.20.1",
    "tslint": "^5.17.0",
    "typescript": "^3.5.2"
  },
  "keywords": [
    "matrix",
    "bot",
    "sdk",
    "js",
    "node",
    "helpers",
    "snippets",
    "chat",
    "modules"
  ],
  "files": [
    "src/*",
    "lib/*",
    "scripts/*",
    "tsconfig.json"
  ],
  "devDependencies": {
    "@types/expect": "^1.20.4",
    "@types/mocha": "^5.2.7",
    "expect": "^24.8.0",
    "get-port": "^5.0.0",
    "matrix-mock-request": "^1.2.3",
    "mocha": "^6.1.4",
    "simple-mock": "^0.8.0",
    "tmp": "^0.1.0",
    "ts-mocha": "^6.0.0"
  }
}
